@{
    ViewData["Title"] = "Cadastro profissional";
}



<main id="bg-cad-profissional">
    <div id="container-profissional" class="container d-flex justify-content-center align-items-center">
        <div id="form-container" class="row">
            <div id="cad-img-profissional" class="col-md-6"></div>
            <div id="border-profissional" class="col d-flex flex-column justify-content-center">
                <form>
                    <h1>Cadastre-se</h1>
                    <label class="d-block">Nome completo</label>
                    <input class="form-control" type="text" />
                    <label class="d-block">Idade</label>
                    <input class="form-control" type="number" />
                    <label class="d-block">E-mail</label>
                    <input class="form-control" type="email" />
                    <label class="d-block">Gênero:  </label>
                    <label><input type="radio" /> Masculino  </label>
                    <label><input type="radio" /> Feminino  </label>
                    <label><input type="radio" /> Não binario</label>
                    <label class="d-block">País</label>
                    <input class="form-control" type="text" />
                    <label class="d-block">Área de atuação</label>
                    <select class="form-control">
                        <optgroup label="Escolha sua área">
                            <option value="12" selected> </option>
                            <option value="12">Técnologia</option>
                            <option value="13">Médicina</option>
                            <option value="14">Engenharia</option>
                            <option value="14">Recursos humanos</option>
                            <option value="14">Vendas</option>
                            <option value="14">Logistica</option>
                        </optgroup>
                    </select>
                    <label class="d-block">Qual modelo de trabalho prefere?</label>
                    <label><input type="radio" /> Presencial  </label>
                    <label><input type="radio" /> Remoto  </label>
                    <label><input type="radio" /> Qualquer</label>
                </form>
                <div id="btn-form" class="d-flex">
                    <a id="button-profissional" class="btn px-4 py-2 mr-3 font-weight-light" >Resetar</a>
                    <a id="btn-profissional" class="btn px-4 py-2 font-weight-light" asp-controller="Home" asp-action="MatchProfissional">Cadastrar</a>
                </div>
            </div>
        </div>
    </div>
</main>


