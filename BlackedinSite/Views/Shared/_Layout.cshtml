<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlackedinSite</title>
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

      <nav class="navbar navbar-dark navbar-expand-md navigation-clean-search">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/img/BlackedinLogo.svg"/></a><button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-2"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navcol-2">
                    <ul class="navbar-nav">
                        <li class="nav-item"></li>
                    </ul>
                    <form class="form-inline mr-auto" target="_self">
                        <div class="form-group mb-0"><label for="search-field"></label></div>
                    </form>
                    <div class="dropdown show">
                        <a class="dropdown-toggle" aria-expanded="true" data-toggle="dropdown"  style="color: rgba(255,255,255,0.6);margin-right: 10px;">Cadastre-se</a>
                        <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="Home" asp-action="CadastroProfissional">Profissional</a>
                        <a class="dropdown-item" asp-controller="Home" asp-action="CadastroEmpresa">Empresa</a></div>
                    </div><span class="navbar-text"> </span>
                </div><a class="btn btn-light action-button" role="button" href="#">Login</a>
            </div>
        </nav>
 
            @RenderBody()

<footer class="footer-basic">
    <div class="social"><a href="#"><i class="icon fab fa-linkedin-in"></i></a><a href="#"><i class="icon fab fa-facebook-f"></i></a><a href="#"><i class="icon fab fa-instagram"></i></a><a href="#"><i class="icon fab fa-pinterest-p"></i></a></div>
    <ul class="list-inline">
        <li class="list-inline-item"><a href="#">Home</a></li>
        <li class="list-inline-item"><a href="#">Objetivos</a></li>
        <li class="list-inline-item"><a href="#">Funcionalidade</a></li>
        <li class="list-inline-item"><a href="#">Testemunhos</a></li>
        <li class="list-inline-item"><a href="#">Time</a></li>
    </ul>
    <p class="copyright">Blackedin © 2022</p>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
